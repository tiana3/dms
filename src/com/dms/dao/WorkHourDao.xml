<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org/DTD Mapper 3.0" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.dms.dao.WorkHourDao">
	<resultMap type="WorkHour" id="workhour">
		<id property="workplaceId" column="workplaceId" javaType="java.lang.Integer" />
		<result property="workplaceName" column="workplaceName" javaType="java.lang.String" />
		<result property="workhour" column="workhour" javaType="java.lang.Double" />
		<result property="workpay" column="workpay" javaType="java.lang.Double" />
	</resultMap>
	<select id="getWorkHour" parameterType="java.lang.String" resultMap="workplaceName">
		select * from workplace
		<where>
			<if test="workplaceName != null">
				workplaceName = "%"#{workplaceName}"%"
			</if>
		</where>
	</select>
</mapper>